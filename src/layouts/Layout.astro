---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Ofrecemos servicios de reparación para móviles y tablets. Desde pantallas rotas hasta problemas de software, confía en nosotros para solucionar tus dispositivos de manera rápida y eficiente"
		/>
		<meta
			name="description"
			content="Somos especialistas en la reparación de equipos móviles y tablets. Reparamos pantallas, baterías y más. ¡Recupera tu dispositivo en perfecto estado hoy mismo!"
		/>
		<meta
			name="keywords"
			content="reparación de móviles, reparación de tablets, servicio técnico de móviles, reparación de pantallas de móviles, reparación de baterías para tablets, soluciones rápidas para problemas de software, desbloqueos de telefono"
		/>
		<title>{title}</title>
	</head>
	<body class="font-primary">
		<slot />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

	@font-face {
		font-family: "Product Sans Regular";
		font-weight: 400;
		src: url("../assets/fonts/ProductSans-Regular.woff") format("woff");
	}
	@font-face {
		font-family: "Product Sans Regular";
		font-weight: 500;
		src: url("../assets/fonts/ProductSans-Medium.woff") format("woff");
	}
	@font-face {
		font-family: "Product Sans Regular";
		font-weight: 500;
		src: url("../assets/fonts/ProductSans-Bold") format("woff");
	}

	:root {
		color-scheme: normal;
		--color-blue-100: #246bfd;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html{
		scroll-behavior: smooth;
	}

	p {
		font-family: inherit;
		font-weight: 100;
	}
	ul {
		list-style: none;
	}

	a,
	button {
		cursor: pointer;
		display: inline-block;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	button {
		background-color: transparent;
		border: 0;
		outline: 0;
		font-family: inherit;
	}

	img {
		max-width: 100%;
		object-fit: cover;
		display: block;
	}

	.btn {
		padding: 1rem 2rem;
		border-radius: 30px;
		background-color: #246bfd;
		color: white;
		font-size: 1rem;
	}
</style>
